<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Agenda</h1>
          <p class="text-center lead">Seus contatos apareceram abaixo</p>
          <%- include('includes/messages') %>
          <% if (contatos.length > 0) { %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Sobrenome</th>
                    <th scope="col">Telefone</th>
                    <th scope="col">Email</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let contato of contatos) { %>
                    <tr>
                      <td><%= contato.nome %></td>
                      <td><%= contato.sobrenome %></td>
                      <td><%= contato.telefone %></td>
                      <td><%= contato.email %></td>
                      <td><a href="contato/<%= contato._id %>">Editar</a></td>
                      <td><a class="text-danger" href="contato/delete/<%= contato._id %>">Delete</a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
          <% } else { %>
            <p class="text-center lead">NÃ£o existe contatos na sua agenda</p>
          <% } %>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>